{% import 'scarfinity/template/components/button.twig' as _button  %}

<div class="cart-coupon">
<span>{{ heading_title }}</span>
	{{
			_basicInput.basicInput({
					group: 'coupon',
					value: coupon,
					rows: 8,
					name: 'coupon',
					placeholder: entry_coupon
			})
	}}
	{{
		_button.BasicButton({
			id: "button-coupon",
			title: button_coupon,
		})
	}}
</div>


